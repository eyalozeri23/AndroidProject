<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_on_click_adapter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.68"
    android:background="@drawable/birthday2"
    android:padding="10dp"

    tools:context="com.eyal.eyalo.birthdayremainderapp.UserDetailsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/on_click_adapter_activity_image_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:src="@drawable/user" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/on_click_adapter_activity_design_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/on_click_adapter_activity_image_view"
        android:layout_marginBottom="6dp"
        android:textColorHint="#000">

        <EditText
            android:id="@+id/on_click_adapter_activity_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-8dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:hint="First Name"
            android:inputType="textCapWords"
            android:textColorHint="#000" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/on_click_adapter_activity_design_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/on_click_adapter_activity_design_first_name"
        android:layout_marginBottom="6dp"
        android:textColorHint="#000">


        <EditText
            android:id="@+id/on_click_adapter_activity_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-8dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:hint="Last Name"
            android:inputType="textCapWords"
            android:textColorHint="#000" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/on_click_adapter_activity_design_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/on_click_adapter_activity_design_last_name"
        android:layout_marginBottom="6dp"
        android:textColorHint="#000">


        <EditText
            android:id="@+id/on_click_adapter_activity_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-8dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:hint="Phone"
            android:inputType="phone"
            android:textColorHint="#000" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/on_click_adapter_activity_design_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/on_click_adapter_activity_design_phone"
        android:layout_marginBottom="6dp"
        android:textColorHint="#000">

        <EditText
            android:id="@+id/on_click_adapter_activity_date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-8dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:hint="Birthday"
            android:textColorHint="#000" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/on_click_adapter_activity_design_birthday_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/on_click_adapter_activity_design_birthday"
        android:layout_marginBottom="6dp"
        android:textColorHint="#000">

        <EditText
            android:id="@+id/on_click_adapter_activity_edit_birthday_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-8dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:hint="Edit Birthday Text"
            android:inputType="textCapWords"
            android:textColorHint="#000" />

    </android.support.design.widget.TextInputLayout>


</RelativeLayout>
