<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_birthday"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.68"
    android:background="@drawable/birthday_candel"
    android:padding="10dp"
    tools:context="com.eyal.eyalo.birthdayremainderapp.AddBirthdayActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/add_birthday_activity_image_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/add_birthday_activity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:text="Add Photo" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/add_birthday_activity_design_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_birthday_activity_image_view">

        <EditText
            android:id="@+id/add_birthday_activity_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-5dp"
            android:gravity="center"
            android:hint="First Name"
            android:inputType="textCapWords"
            android:textColorHint="#000" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/add_birthday_activity_design_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_birthday_activity_design_first_name">

        <EditText
            android:id="@+id/add_birthday_activity_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-1dp"
            android:gravity="center"
            android:hint="Last Name"
            android:inputType="textCapWords"
            android:textColorHint="#000" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/add_birthday_activity_design_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_birthday_activity_design_last_name"
        android:layout_marginTop="-5dp">

        <EditText
            android:id="@+id/add_birthday_activity_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-2dp"
            android:gravity="center"
            android:hint="Phone"
            android:inputType="phone"
            android:textColorHint="#000" />
    </android.support.design.widget.TextInputLayout>


    <EditText
        android:id="@+id/add_birthday_activity_date_of_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_birthday_activity_design_phone"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:alpha="0.6"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:hint="Birthday"
        android:textColorHint="#000"

        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/add_birthday_activity_design_birthday_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_birthday_activity_date_of_birth"
        android:layout_marginTop="-28dp">

        <EditText
            android:id="@+id/add_birthday_activity_birthday_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColorHint="#000"
            android:hint="Birthday Text"
            android:inputType="textCapWords" />


    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/add_birthday_activity_save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_birthday_activity_design_birthday_text"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="20dp"
        android:alpha="0.8798"
        android:background="#000"
        android:onClick="save"
        android:text="Save"
        android:textColor="#fff" />


</RelativeLayout>
